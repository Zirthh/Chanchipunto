<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewChan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="182dp"
        android:layout_marginTop="83dp"
        android:text="Puntos" />

    <ImageView
        android:id="@+id/imageViewChan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewChan"
        android:layout_alignStart="@+id/textViewChan"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="31dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />


    <Button
        android:id="@+id/buttonDerChan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewChan"
        android:layout_alignLeft="@id/imageViewChan"
        android:layout_alignParentStart="@+id/imageViewChan"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="39dp"
        android:text="+" />

    <Button
        android:id="@+id/buttonIzqChan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewChan"
        android:layout_alignLeft="@id/imageViewChan"
        android:layout_alignParentStart="@+id/imageViewChan"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="39dp"
        android:text="-" />

</RelativeLayout>